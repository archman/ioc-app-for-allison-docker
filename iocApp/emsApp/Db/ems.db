# start scan: x
record(bo, "$(P):START_SCAN") {
    field(DTYP, "Python Device")
    field(OUT,  "@devsup.ptable ems set trigger")
    field(VAL,  "0")
    field(ZNAM, "IDLE")
    field(ONAM, "STARTED")
    field(PINI, "YES")
}
